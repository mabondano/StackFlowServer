<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="StackflowPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/StackflowDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <class>com.stackflow.server.persistence.entity.TestEntity</class>
        <!-- agrega aquí tus entidades -->
        <properties>
            <!-- Ejemplo de configuración adicional -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <!-- Logging, dialectos, etc. -->
        </properties>
    </persistence-unit>
</persistence>
